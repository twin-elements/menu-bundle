{% extends '@TwinElementsAdmin/core/details_with_sidebar.html.twig' %}

{% set back_button_link = path('menucategory_index') %}

{% block title %}
    {% if entity.title %}
        {{ entity.title }}
    {% else %}
        {{ entity.translate(default_locale, false).title }}<br>
        <span class="badge badge-warning small">{{ "cms.no_translation_for_this_locale"|translate_admin }}</span>
    {% endif %}
{% endblock %}

{% block buttons %}
    {{ block('back_button') }}
{% endblock %}

{% block right_sidebar %}
    {{ block('changes_details') }}
    <div class="cms-section">
        <a href="{{ path('menu_index', {'category': entity.id}) }}" class="btn btn-outline-primary rounded-pill btn-sm">{{ "menu.menu_elements"|translate_admin }}</a>
    </div>
    {{ block('delete_form') }}
{% endblock %}
